<!-- Modal -->
<div class="modal fade" id="issueDetail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="detailHeader"><%= subject%></div>
      </div>
			<div class="modal-body">
				<div class="form-group">
					<label>Tracker</label>
					<select class="form-control" name="tracker_id">
					<% 
						_(trackers).each(function(item){
							%>
								<option value="<%= item.id%>" <% if( typeof tracker.id != 'undefined' && tracker.id==item.id)print('selected'); %>>
								<%= item.name %>	
								</option>
							<%
						})
					%>
					</select>
				</div>
				<div class="form-group">
					<label>Status</label>
					<select class="form-control" name="status_id">
						<% 
							_(issueStatuses).each(function(item){
								%>
									<option value="<%= item.id%>" <% if( typeof status.id != 'undefined' && status.id==item.id)print('selected'); %>>
									<%= item.name %>	
									</option>
								<%
							})
						%>
					</select>
				</div>
				<div class="form-group">
					<label>Priority</label>
					<select class="form-control" name="priority_id">
						<% 
							_(issuePriorities).each(function(item){
								%>
									<option value="<%= item.id%>" <% if( typeof priority.id != 'undefined' && priority.id==item.id)print('selected'); %>>
									<%= item.name %>	
									</option>
								<%
							})
						%>
					</select>
				</div>
			</div>
    </div>
  </div>
</div>

